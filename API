
@api.route('/course')  # Create a URL route to this resource
class HelloWorld(Resource):  # Create a RESTful resource
    def get(self):  # Create GET endpoint
        return db['course']


@api.route('/hello/<int:id>')
class HelloId(Resource):
    def get(self, id):
        return {'hello': id}


@api.route('/study_programs/bp/<string:program_name>/<string:another_param>')
class PrName(Resource):
    def get(self, program_name, another_param):
        return {'pn': program_name}


if __name__ == '__main__':
    app.run(debug=True)
